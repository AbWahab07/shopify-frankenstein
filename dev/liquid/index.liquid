      <div class="unslider">
        <ul>
          <li><a href="https://www.autismspeaks.org/" target="_blank"><img src="{{ 'unslider.jpg' | asset_url }}" /></a></li>
        </ul>
      </div>
    </div>
    <div class="shoutout-to-them-freshmen">
      <h3 class="instagram-thing-heading section-subheading">Instagram @sunstaches</h3>
      <div class="instagram-thing-main">
        <img class="all-gold-everything" src="{{ 'all-gold-everything.png' | asset_url }}" alt="gold picture frame" />
        <div class="main-image-entry-point"></div>
      </div>
      <div class="instagram-thing-thumbnails"></div>
    </div>
  </div>
</div>
